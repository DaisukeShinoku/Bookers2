<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <%= render partial: 'books/new', locals: {user:@user, book:Book.new} %>
    <div class="col-lg-9">
      <h1>Books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, size:"60x60", fallback: "no_image.jpg"%></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Show', book %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>