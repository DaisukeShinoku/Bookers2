<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
       <h3 class="error_message"><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
       <% @book.errors.full_messages.each do |message| %>
       <ul class="error_message">
        <li><%= message %></li>
       </ul>

       <% end %>
       <% end %>

        <%= form_for(@book) do |f| %>

          <div class="field row">
           <label for="book_title">Title</label>
           <input class="col-xs-12 book_title" type="text" value= '<%= @book.title %>' name="book[title]" id="book_title">
          </div>

          <div class="field row">
           <label for="book_body">Opinion</label>
           <textarea class="col-xs-12 book_body" type="text" name="book[body]" id="book_body"><%= @book.body %></textarea>
          </div>

          <div class="actions row">
              <input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
          </div>
        <% end %>

      <div class="field row">
        <%= link_to 'Show', @book %> |
        <%= link_to 'Back', books_path %>
      </div>

    </div>
  </div>
</div>