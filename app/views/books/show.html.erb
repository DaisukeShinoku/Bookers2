<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
      <%= render partial: 'books/new', locals: {user:@user, book:Book.new} %>

    <div class="col-lg-9">
      <h2>Book detail</h2>
    	<table class="table table-striped">
        <tbody>
          <tr></tr>
          <tr>
            <th><%= link_to (attachment_image_tag @book.user, :profile_image, size:"40x40", fallback: "no_image.jpg"), user_path(@user.id) %><br><%= link_to @user.name, user_path(@user.id) %></th>
            <th><%= @book.title %></th>
            <th><%= @book.body %></th>

            <% if @book.user == current_user %>
            <th><%= link_to 'Edit', edit_book_path(@book) %></th>
            <th><%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' } %></th>
            <% end %>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>