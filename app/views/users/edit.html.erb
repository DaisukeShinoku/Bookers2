<div class="container">

<p id="notice"><%= notice %></p>

<h2>User info</h2>

<% if @user.errors.any? %>
<h3 class="error_message"><%= @user.errors.count %> errors prohibited this book from being saved:</h3>

  <% @user.errors.full_messages.each do |message| %>
<ul class="error_message">
  <li><%= message %></li>
</ul>

<% end %>
<% end %>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <div class="user-edit-image">
    <%= f.attachment_field :profile_image %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, id: :user_introduction %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>