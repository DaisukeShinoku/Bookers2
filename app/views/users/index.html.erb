<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Image</th>
            <th>name</th>
            <th colspan="4"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "no_image.jpg"%></td>
              <td><%= user.name %></td>
              <td><%= link_to 'Show', user %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-default" %>
